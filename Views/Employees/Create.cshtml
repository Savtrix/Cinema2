@model Cinema.Models.Employee

@{
    
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";
    

}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee_Name" class="control-label">Name</label>
                <input asp-for="Employee_Name" class="form-control" />
                <span asp-validation-for="Employee_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Surename" class="control-label">Surname</label>
                <input asp-for="Employee_Surename" class="form-control" />
                <span asp-validation-for="Employee_Surename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Position" class="control-label">Position</label>
                <select asp-for="Employee_Position"  class="form-control" >
                  <option value="Film Projectionist">Film Projectionist</option>
                  <option value="Movie Usher">Movie Usher</option>  
                  <option value="Cashier">Cashier</option>  
                  <option value="Concession Counter Attendant">Concession Counter Attendant</option>  
                  <option value="Cinema Menager">Cinema Menager</option>  
                </select>  
                <span asp-validation-for="Employee_Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>
        <a asp-action="Index" class="btn btn-primary"  style="margin-top:10px;">Back to List</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
